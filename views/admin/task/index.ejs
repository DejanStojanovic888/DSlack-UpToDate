<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/bootstrap.css">
    <link rel="stylesheet" href="/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/admin/main.css">
</head>
<body>
<%- include('/admin/partials/navbar.ejs')%>
<div class="container-fluid mt-5">
    <div class="row">
        <%- include('/admin/partials/sidebar.ejs')%>
        <div class="col-10">
            <div class="d-flex align-items-center mb-3">
                <h1>All Tasks</h1>
                <a href="/admin/task/create" class="btn btn-outline-primary ms-auto">New Task</a>
            </div>
            <hr>
            <div class="row">
                <div class="col-10 offset-1">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>To</th>
                            <th>From</th>
                            <th>Public</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% tasks.forEach(function(task){ %>
                            <tr>
                                <td><%= task.title%></td>
                                <td><%= task.assignedTo.username %></td>
                                <td><%= task.assignedBy.username %></td>
                                <td>
                                    <% if(task.public) {%>
                                    <i class="bi-eye fs-4 text-success"></i>
                                    <% }else { %>
                                            <i class="bi-eye-slash fs-4 text-danger"></i>
                                        <% } %>
                                </td>
                                <td><%= task.status %></td>
                                <td>
                                    <% if (task.isOwner(user._id)) {%>
                                    <i data-id="<%= task._id %>" class="delete-btns bi-trash"></i>
                                        <% } %>
                                    <i class="bi-pen"></i>
                                        <% if (task.description.length > 0) {%>
                                    <i data-description="<%= task.description %>" class="btn-decs bi bi-app-indicator"></i>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
        </div>
    </div>
</div>

<script src="/jquery.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
<script>
   let descBtns = document.querySelectorAll('.btn-decs');
   let deleteBtns = document.querySelectorAll('.delete-btns');
   deleteBtns.forEach(btn => {
      btn.addEventListener('click', deleteTask)
   })


   descBtns.forEach(btn => {
       btn.addEventListener('click', showDescription);
   })



   function deleteTask(e){
       let id = e.target.getAttribute('data-id');
       fetch(`/admin/task/${id}`, {method: 'DELETE'})
           .then(res => res.json())
           .then(data => {
               if(data.msg === 'Task deleted successfully'){
                   location.reload();
               }else {
                alert('Something went wrong');
               }
           })
   }

   function showDescription(e){
       let desc = e.target.getAttribute('data-description');
        let modal = new bootstrap.Modal(document.getElementById('exampleModal'))
       let title = document.querySelector('.modal-title');
        title.innerText = 'Description';
        let body = document.querySelector('.modal-body');
        body.innerText = desc;
        modal.show();
   }
</script>
</body>
</html>
